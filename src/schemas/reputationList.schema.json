{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://fedits.app/schemas/reputation-list.json",
  "title": "Instance Reputation List",
  "description": "List of Fediverse instances with reputation metadata",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    },
    "source": {
      "type": "string",
      "description": "Source of this reputation data"
    },
    "instances": {
      "type": "array",
      "description": "List of instances with reputation data",
      "items": {
        "type": "object",
        "required": ["domain", "reputation"],
        "properties": {
          "domain": {
            "type": "string",
            "description": "Instance domain name",
            "format": "hostname"
          },
          "reputation": {
            "type": "string",
            "enum": ["trusted", "neutral", "problematic", "blocked"],
            "description": "Reputation level"
          },
          "reason": {
            "type": "string",
            "description": "Reason for reputation assignment"
          },
          "addedDate": {
            "type": "string",
            "format": "date-time",
            "description": "When this entry was added"
          },
          "evidence": {
            "type": "array",
            "description": "Links to evidence supporting reputation",
            "items": {
              "type": "string",
              "format": "uri"
            }
          },
          "tags": {
            "type": "array",
            "description": "Tags for categorization",
            "items": {
              "type": "string"
            }
          },
          "reviewDate": {
            "type": "string",
            "format": "date-time",
            "description": "Last review date"
          }
        }
      }
    }
  },
  "required": ["version", "lastUpdated", "instances"]
}
